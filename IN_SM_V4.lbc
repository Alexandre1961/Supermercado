'######################################################################################
'CRIAÇÃO DOS BDs
Dados=JoinStr(ProgramDir,"\Dados")
'CRIA O BD DE CADASTRO DO PRODUTO
DB CadPro,Dados
"Sequencia",AutoInc
"Codigo",String,13
"Produto",String,40
"DataCompra", String,8
"ValorProduto",Decimal,10
"Local",String,40
EndDB
OpenDB CadPro  
'######################################################################################
'PROGRAMA
'CHAMA AS SUB ROTINAS INICIAIS 
CriaDBTmp() 
Tela()
LisCadPro()
LisCadProTmp()
While 1 = 1 
 Wait ClickButton 
 'Saida
 If RetStr = "BtnSair"
  Backup() 
  EndWindow
 EndIf    
 'Inclusão
 If RetStr = "BtnIncluir"
  Mg = Message("Deseja Incluir o Produto?", OptionYesNo)
  If Mg = True
   CarregaCadPro()
   AddRecord CadPro
  EndIf 
   LisCadPro()
   LimpaTela()
 EndIf  
 'Alteração
 If RetStr = "BtnAlterar" 
  Mg = Message("Deseja Alterar o Produto?", OptionYesNo)
  If Mg = True 
  CarregaCadPro()
  UpdateRecord CadPro, Posi
  EndIf  
  LisCadPro()
  LimpaTela()
 EndIf              
 'Exclusão
 If RetStr = "BtnExcluir"
  Mg = Message("Deseja Excluir o Produto?", OptionYesNo)
  If Mg = True   
  DeleteRecord CadPro,Posi
  EndIf 
  LimpaTela()
  LisCadPro()
 EndIf  
 If RetStr = "BtnCompacta"
  Mg = Message("** QUALQUE ERRO APAGUE O FILE.LBF E RENOMEIE O FILE.TMP ** Deseja Compactar DB?", OptionYesNo)
  If Mg = True
   Backup()   
   CompactDB CadPro
  EndIf 
  LimpaTela()
  LisCadPro()
 EndIf 
 'Lista
 If RetStr = "BtnLista"
  Mg = Message("Deseja Incluir o Produto na lista?", OptionYesNo)
  If Mg = True 
   Posi = StrVal(BoxPesCodPro.Txt(0))
   CarregaPosPes()
   LisCadProTmp()
  EndIf
  Posi = "" 
 EndIf
 'Nova lista
 If RetStr = "BtnNovaLista"
  ApagaCadProTmp()
  CriaDBTmp()
  LisCadProTmp()
 EndIf
 'Altera a Qt na Lista
 If RetStr = "BtnAlteraQt"
  Mg = Message("Deseja Alterar a Qt?", OptionYesNo)
  If Mg = True
  AlteraCadProTmp()
  LisCadProTmp()
  EndIf
 EndIf
 'Exclui um item da lista
 If RetStr = "BtnExcluiItem"
  Mg = Message("Deseja Excluir o Item? ",OptionYesNo)
  If Mg = True
   Posi = StrVal(BoxCadProTmp.Txt(0))
   DeleteRecord CadProTmp,Posi
   LisCadProTmp()
  EndIf
 EndIf 
 'Imprime no relatório
 If RetStr = "BtnImprime"
  ImprimeRep()
 EndIf 
Loop  
EndProgram
