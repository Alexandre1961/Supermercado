'######################################################################################
'FAZ A PESQUISA AUTOMATICA DO PRODUTO
Sub Timer_PesCodPro(600) 
 If TxtPesPro.Txt <> "" And TxtPesPro.Txt <> ProDigitado  ' Se diferente de "" e diferente do que se digitou não faz loop 
   LisPesPro()
   Text TxtPesCod.Txt = ""
 EndIf
 If TxtPesCod.Txt <> "" And TxtPesCod.Txt <> CodDigitado ' Se diferente de "" e diferente do que se digitou não faz loop  
  LisPesCod()
  Text TxtPesPro.Txt =""
 EndIf
 If StrLen(TxtPesPro.Txt)=0 And StrLen(TxtPesCod.Txt)=0  
   Box BoxPesCodPro.Cls
 EndIf
EndSub #%